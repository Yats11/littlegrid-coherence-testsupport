<?xml version="1.0"?>

<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>
    <defaults>
        <serializer>
            <class-name>com.tangosol.io.pof.ConfigurablePofContext</class-name>
            <init-params>
                <init-param>
                    <param-type>java.lang.String</param-type>
                    <param-value>coherence/littlegrid-test-pof-config.xml</param-value>
                </init-param>
            </init-params>
        </serializer>
    </defaults>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>cache-only-for-custom-configured</cache-name>
            <scheme-name>simple-distributed-scheme</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <distributed-scheme>
            <scheme-name>simple-distributed-scheme</scheme-name>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>
    </caching-schemes>
</cache-config>
